<div class="container">
  <h1 class="text-center my-5">レシピ編集</h1>

  <%= form_with(model: @recipe, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title, 'タイトル' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :description, '手順' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <% if @recipe.image.attached? %>
      <%= image_tag @recipe.image, class: "img-thumbnail mb-3" %>
    <% end %>
     <div class="form-group">
      <%= form.label :image, '画像' %>
      <%= form.file_field :image, class: 'form-control-file' %>
    </div>

    <div class="form-group">
      <h3>材料</h3>
      <%= form.fields_for :recipe_ingredients do |recipe_ingredient_form| %>
        <div class="row mb-3">
          <div class="col-md-6">
            <%= recipe_ingredient_form.label :name, '材料名' %>
            <%= recipe_ingredient_form.text_field :name, class: 'form-control' %>
          </div>
          <div class="col-md-6">
            <%= recipe_ingredient_form.label :amount, '分量' %>
            <%= recipe_ingredient_form.text_field :amount, class: 'form-control' %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="form-group text-center">
      <%= form.submit '更新', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>







