<div class="container">
  <h1 class="mb-4">レシピ一覧</h1>

  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if recipe.images.attached? %>
            <%= image_tag recipe.images.first.variant(resize: "300x200"), class: "card-img-top" %>
          <% else %>
            <%= image_tag "default_recipe_image.jpg", class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= recipe.title %></h5>
            <p class="card-text"><%= truncate(recipe.content, length: 100) %></p>
          </div>
          <div class="card-footer">
            <%= link_to "詳細", recipe_path(recipe), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>