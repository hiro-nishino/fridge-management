<%= paginate @recipes %>
<div class="container">
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="card my-3">
          <img src="<%= recipe.image.url %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= recipe.title %></h5>
            <p class="card-text"><%= truncate(recipe.description, length: 100) %></p>
            <%= link_to '詳細', recipe_path(recipe), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>