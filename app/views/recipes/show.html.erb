<div class="container">
  <h1 class="text-center my-5"><%= @recipe.title %></h1>

  <div class="row">
    <div class="col-md-6">
      <% if @recipe.image.attached? %>
        <%= image_tag @recipe.image, class: "img-fluid" %>
      <% else %>
        <p>画像がありません</p>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2>材料</h2>
      <p>何人分: <%= @recipe.serving_size %>人</p>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>材料名</th>
            <th>分量</th>
          </tr>
        </thead>
        <tbody>
          <% @recipe.ingredients.each do |ingredient| %>
            <tr>
              <td><%= ingredient.name %></td>
              <td><%= ingredient.quantity %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <section class="step">
    <h2 class="cooking-title">作り方</h2>
    <% @recipe.steps.each_with_index do |step, index| %>
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">手順 <%= index + 1 %>:</h5>
          <p class="card-text"><%= step.direction %></p>
          <% if step.image? %>
            <%= image_tag step.image.url, class: "card-img-bottom" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </section>
</div>