<div class="container">
  <h1 class="text-center my-5"><%= @recipe.title %></h1>

  <div class="row">
    <div class="col-md-6">
      <% if @recipe.image.attached? %>
        <%= image_tag @recipe.image, class: "img-fluid" %>
      <% else %>
        <p>画像がありません</p>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2>材料</h2>
      <ul>
        <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
          <li><%= recipe_ingredient.ingredient.name %> <%= recipe_ingredient.amount %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12">
      <h2>手順</h2>
      <p><%= @recipe.description %></p>
    </div>
  </div>
</div>