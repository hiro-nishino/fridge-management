<%= render "shared/header" %>
<div class="container">
  <h1 class="text-center mb-4">検索結果</h1>
  <div class="row">
    <% @search_recipes.each do |recipe| %>
      <div class="col-md-4 col-sm-6 mb-4">
        <div class="card h-100">
          <%= link_to recipe_path(recipe) do %>
            <% if recipe.image.attached? %>
              <%= image_tag recipe.image.variant(resize: "350x200"), class: "card-img-top" %>
            <% else %>
              <%= image_tag "default_recipe_image.jpg", class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= recipe.title %></h5>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/second-footer" %>