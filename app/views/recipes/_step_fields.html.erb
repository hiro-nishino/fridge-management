<div class="nested-fields">
  <div class="row">
    <div class="col">
      <%= f.label :description, "手順説明", class: "form-label" %>
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.label :image, "手順画像", class: "form-label" %>
      <%= f.file_field :image, class: "form-control step-image-input" %>
      <img src="#" alt="手順画像プレビュー" class="step-image-preview" style="max-width: 200px;">
    </div>
  </div>
  <%= f.hidden_field :_destroy %>
  <%= link_to "削除", "#", class: "remove_fields" %>
</div>