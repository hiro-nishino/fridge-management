<%= render "shared/second-header"%>
<%= form_with url: fridge_fridge_ingredients_path(@fridge.id), method: :post, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :content, "レシピの説明" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <!-- 画像投稿 -->
  <div class="form-group">
   <label>レシピ画像</label>
    <input type="file" id="recipe_image" class="form-control">
    <br>
    <img id="preview" class="img-fluid img-thumbnail" style="display:none;" />
  </div>

  <!-- 材料と量の投稿 -->
  <div id="ingredients">
  <%= form.label :serving_size, "何人分" %>
  <%= form.number_field :serving_size, min: 1, required: true %>
    <%= form.fields_for :recipe_ingredients do |ingredient_form| %>
      <div class="row mb-3">
        <div class="col">
          <%= ingredient_form.label :name, "材料" %>
          <%= ingredient_form.text_field :name, class: "form-control" %>
        </div>
        <div class="col">
          <%= ingredient_form.label :quantity, "量" %>
          <div class="input-group">
            <%= ingredient_form.number_field :quantity, class: "form-control" %>
          </div>
        </div>
        <div class="col">
          <%= ingredient_form.label :is_seasoning, "調味料" %>
          <%= ingredient_form.check_box :is_seasoning, class: "form-check-input" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- ステップ投稿 -->
  <div id="steps">
    <div class="form-group" id="step-0">
      <label>手順 1</label>
      <textarea class="form-control" name="recipe[recipe_steps_attributes][0][content]" rows="3"></textarea>
      <label class="mt-2">手順画像</label>
      <input type="file" id="step-image-0" class="step-image form-control" name="recipe[recipe_steps_attributes][0][image]">
      <br>
      <img id="preview-step-image-0" class="img-fluid img-thumbnail" style="display:none;" />
    </div>
  </div>
  
  <div class="mb-3">
    <button type="button" id="add-step" class="btn btn-secondary">手順を追加</button>
  </div>

  <%= form.submit "投稿", class: 'btn btn-primary mt-3' %>
<% end %>