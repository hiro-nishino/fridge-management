<%= render "shared/header"%>
<section class="login">
  <div class="login__contentBx">
    <div class="login__formBx">
      <div class="login__title">アカウント編集</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
        <% if @user.errors.include?(:avatar) %>
          <p class="login__form-error"><%= @user.errors.full_messages_for(:avatar).first %>
        <% end %>

        <div class="login__inputBx">
          <%= f.label :name, 'ニックネーム', class: 'login__label' %>
          <%= f.text_field :nickname, maxlength: '50', placeholder: 'ニックネームを入力してください' %>
          <% if @user.errors.include?(:name) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:name).first %>
          <% end %>
        </div>
        <div class="login__inputBx">
          <%= f.label :email, 'メールアドレス', class: 'login__label' %>
          <%= f.email_field :email, maxlength: '100', placeholder: 'メールアドレスを入力してください' %>
          <% if @user.errors.include?(:email) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:email).first %>
          <% end %>
        </div>

        <div class="login__inputBx">
          <%= f.label :password, 'パスワード', class: 'login__label' %>
          <%= f.password_field :password,
                                autocomplete: "off",
                                minlength: @minimum_password_length,
                                maxlength: '20',
                                placeholder: 'パスワードを入力してください'
          %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">パスワードは<%= @minimum_password_length %>文字以上で入力してください。</small>
          <% end %>

          <% if @user.errors.include?(:password) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:password).first %>
          <% end %>
        </div>

        <div class="login__inputBx">
          <%= f.label :password_confirmation, 'パスワード（確認）', class: 'login__label' %>
          <%= f.password_field :password_confirmation,
                                autocomplete: "off",
                                minlength: @minimum_password_length,
                                maxlength: '20',
                                placeholder: 'パスワードを再度入力してください'
          %>
          <% if @user.errors.include?(:password_confirmation) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:password_confirmation).first %>
          <% end %>
        </div>

        <div class="login__inputBx">
          <%= f.submit '更新' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%= render "shared/second-footer"%>