<header class="header">
  <div class="header__inner">
    <%= link_to root_path, class: 'header-logo' do %>
      <%= image_tag 'manegement.svg', class: 'header-logo' %>
    <% end %>
    <%= form_with(url: search_recipes_path, method: :get, local: true, class: "search-form") do |form| %>
      <%= form.text_field :query, class: "input-box", placeholder: "キーワードを入力" %>
      <%= form.submit "検索", class: "btn btn-outline-success my-2 my-sm-0" %>
    <% end %>
    <nav class="header__nav">
      <ul class="header__ul">
        <% if user_signed_in? %>
          <li class="header__li"><%= link_to image_tag("mypage.svg", class: "svg"), user_path(id: current_user.id) %></li>
          <li class="header__li"><%= link_to image_tag("fridge.svg", class: "svg"), user_fridge_path(id: current_user.fridge.id, user_id: current_user.id) %></li>
          <li class="header__li"><%= link_to image_tag("recipe.svg", class: "svg"), recipes_path %></li>
          <li class="header__li"><%= link_to image_tag("logout.svg", class: "svg"), destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li class="header__li"><%= link_to image_tag("register.svg", class: "svg"), new_user_registration_path %></li>
          <li class="header__li"><%= link_to image_tag("login.svg", class: "svg"), new_user_session_path %></li>
          <li class="header__li"><%= link_to image_tag("recipe.svg", class: "svg"), recipes_path %></li>
        <% end %>
      </ul>
    </nav>
    <button class="mobile-menu__btn">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>
